<% include ./partials/header.ejs %>
<div class="container mx-auto max-w-md mt-20">
  <h2 class="text-2xl mb-6">Signup</h2>
  <form action="/register" method="post">
    <input type="text" name="username" placeholder="Name" class="block w-full px-4 py-2 mb-4 border rounded-md">
    <!-- <input type="text" name="branch" placeholder="Branch" class="block w-full px-4 py-2 mb-4 border rounded-md"> -->
    <select name="branch" class="block w-full px-4 py-2 mb-4 border rounded-md">
      <option value="" disabled selected>Select Branch</option>
      <option value="EC">Electronics & Communication Engineering</option>
      <option value="EE">Electrical Engineering</option>
      <option value="Civil">Civil Engineering</option>
      <option value="CSE">Computer Science & Engineering</option>
      <option value="Mech">Mechanical Engineering</option>
      <option value="IOT">Internet of Things (IoT)</option>
       <!-- Add more branch options as needed -->
    </select>

    <input type="email" name="email" placeholder="Email" class="block w-full px-4 py-2 mb-4 border rounded-md">
    <input type="password" name="password" placeholder="Password" class="block w-full px-4 py-2 mb-4 border rounded-md">
      <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md">Signup</button>
  </form>
  <p class="mt-4 text-center text-sm">Already have an account? <a href="/loginfaculty" class="text-blue-500">Login</a></p>
</div>
<% include ./partials/footer.ejs %>