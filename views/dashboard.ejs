<% include ./partials/header.ejs %>

<div class="w-full min-h-screen text-white flex flex-col items-center">
  <div class="container mx-auto mt-10">
    <h2 class="text-2xl mb-6">Registered Students</h2>
    <% if (students && students.length > 0) { %>
      <div class="grid grid-cols-1 gap-4">
        <% students.forEach((student, index) => { %>
          <div class="bg-gray-800 rounded-lg p-4 grid grid-cols-2 gap-4 items-center">
            <div class="flex items-center">
              <img src="<%= student.image %>" alt="Student Image" class="rounded-full h-16 w-16 mr-4">
              <div>
                <h3 class="text-xl font-bold mb-1"><%= index + 1 %>. <%= student.name %></h3>
                <p class="text-gray-400">Enrollment No: <%= student.enrollmentNo %></p>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <p>No students registered yet.</p>
    <% } %>
  </div>
</div>

<% include ./partials/footer.ejs %>
