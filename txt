StreakTrack/
├── bin/
│   └── www                      
├── models/
│   └── users.js  
├── public/
│   ├── images/                  
│   │   └── studentsImages/      // Directory for student images
│   ├── javascripts/
│   │   ├── face-api.min.js           
│   │   ├── faceDetection.js
│   │   └── register-student.js  // JavaScript file for student registration
│   ├── stylesheets/
│   │   └── style.css
│   └── models/ 
│       ├── age_gender_model-weights_manifest.json
│       ├── tiny_face_detector_model-weights_manifest.json
│       ├── face_expression_model-weights_manifest.json
│       ├── face_landmark_68_model-weights_manifest.json
│       ├── face_landmark_68_tiny_model-weights_manifest.json
│       ├── face_recognition_model-weights_manifest.json
│       ├── mtcnn_model-weights_manifest.json
│       └── ssd_mobilenetv1_model-weights_manifest.json
├── routes/
│   ├── index.js                  // Main routes
│   └── multer.js                 // Routes related to multer
├── views/
│   ├── partials/
│   │   ├── footer.ejs           // Footer partial view
│   │   └── header.ejs           // Header partial view
│   ├── dashboard.ejs            // Dashboard view
│   ├── attendance.ejs           // Attendance view (to display video and detected faces)
│   ├── error.ejs                // Error view
│   ├── facultydashboard.ejs     // Faculty dashboard view
│   ├── index.ejs                // Main index view
│   ├── loginfaculty.ejs         // Faculty login view
│   └── registerstudent.ejs      // Student registration view
├── app.js                       // Main application file (e.g., Express.js setup)
├── package-lock.json
└── package.json

